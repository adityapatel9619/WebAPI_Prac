    function ClearData() {
            $('#txtFName').val(''),
            $('#txtLName').val(''),
            $('#txtAdd').val(''),
            $('#txtAdd2').val(''),
            $('#txtPhNo').val(''),
            $('#txtAlthNo').val(''),
            $('#txtDob').val(''),
            $('#ddlGender').val('')
    }

</script>

